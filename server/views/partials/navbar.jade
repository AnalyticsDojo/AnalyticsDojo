nav.navbar.navbar-default.navbar-fixed-top.nav-height
    .navbar-header
        button.hamburger.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            .col-xs-12
                span.hamburger-text Menu
        a.navbar-brand(href='/')
            img.img-responsive.nav-logo(src='/images/dojo.png', alt='learn analytics at the analytics dojo')
        a.navbar-brand(href="/") Analytics Dojo
    .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right.hamburger-dropdown
            li.hidden-xs
                a#nav-map-btn(href='#' onclick='return false') Lessons
            li.visible-xs
                a(href='/map') Lessons
            li.hidden-xs
                a#nav-chat-btn(href='#' onclick="return false") Chat
            li.visible-xs
                a(href="//gitter.im/analyticsdojo/analyticsdojo" target="_blank") Chat
            li
                a(href='/news', target='_blank') News
            li
                a(href='/jobs') Jobs
            li
                a(href='/about') About
            if !user
                li
                    a(href='/login') Sign in
            else
                li.brownie-points-nav
                  a(href='/' + user.username) [&thinsp;#{user.progressTimestamps.length}&thinsp;]
                li.hidden-xs.hidden-sm.avatar
                  a(href='/' + user.username)
                        img.profile-picture.float-right(src='#{user.picture}')
